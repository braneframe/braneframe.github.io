{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
//  "noEmit": true,
//  "noImplicitAny": true,  // TODO(burdon): Fix.
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2018",
    "removeComments": false
  },
  "include": [
    "src",
    "stories",
  ]
}
